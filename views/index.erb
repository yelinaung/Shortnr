<!DOCTYPE html>
<html>
<head>
  <title> Shortnr </title>
  <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.2.0/pure-min.css">
  <link href='http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'>
  <style>
  h2, button, a {
    font-family: 'Droid Serif', serif;
  }
  </style>
</head>
<body>
<% if @error %>
  <p> <%= @error %></p>
<% end %>
<div class="pure-g">
  <div class="pure-u-1-3"></div>
  <div class="pure-u-1-3">
  <h2> Let's Shorten your loooong one! </h2>
  <form action="/index" method="POST" class="pure-form">
    <input type="url" id="url" name="url" class="pure-input-rounded pure-input-1-2">
    <button type="submit" value="Shorten" class="pure-button pure-button-primary">Generate</button>
    <br/>
  </form>
  <hr>
  <br>
  <% if @token %>
    <a id="url_link" href="http://localhost:4567/<%= @token %>">http://localhost:4567/<%= @token %></a>
    <button class="pure-button" id="copy-button" data-clipboard-target="url_link" data-copy-hint="copied!" title="copy to clipboard.">Copy It!</button>
  <% end %>
  </div>
  <div class="pure-u-1-3"></div>
  <script src="../js/ZeroClipboard.min.js"></script>
  <script>
    var clip = new ZeroClipboard( document.getElementById("copy-button"), {
      moviePath: "js/ZeroClipboard.swf"
    });

    clip.on( 'load', function(client) {
      // alert( "movie is loaded" );
    });
  </script>
</body>
</html>
